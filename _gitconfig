[alias]
  alias = config --get-regexp alias
  b = branch
  co = checkout
  hard-reset = ! git reset --hard && git clean -f -d
  lol = log --graph --decorate --pretty=oneline --abbrev-commit --all
  recommit = commit --amend

[color]
  ui = true

[core]
	excludesfile = ~/.gitignore_global

