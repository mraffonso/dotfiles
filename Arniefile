env :linux do
  symlink :bin
end

env :macos do
  group :system_bootstrap do
    run :brew do
      %x( /usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)" )
      %x( brew analytics off )
      %x( brew install gpg )
    end

    run :install_rvm_and_ruby do
      %x( gpg --keyserver hkp://keys.gnupg.net --recv-keys 409B6B1796C275462A1703113804BB82D39DC0E3 7D2BAF1CF37B13E2069D6956105BD0E739499BDB )
      %x( \\curl -sSL https://get.rvm.io | bash -s stable )
      %x( rvm install ruby ) # Install latest stable ruby
    end
  end

  group :brew do
    symlink "macos/Brewfile", "Brewfile"
    run :install_brew_packages do
      %x( brew bundle )
    end
  end

  group :ruby_gems do
    symlink "_gemrc", ".gemrc"
  end

  group :bin do
    symlink "macos/bin", "bin"
  end

  group :bundler do
    symlink "macos/_bundle", ".bundle"
  end

  group :git do
    symlink "_gitconfig", ".gitconfig"
    symlink "_gitignore_global", ".gitignore_global"
  end

  group :hg do
    symlink "_hgrc", ".hgrc"
  end

  group :puma_dev do
    run do
      %x( sudo puma-dev -setup )
    end
  end

  group :rails do
    symlink "_railsrc", ".railsrc"
  end

  group :shell do
    symlink "macos/_profile", ".profile"
  end

  group :subl do
    symlink "sublime-text-3/Packages/User", "Library/Application Support/Sublime Text 3/Packages/User"
  end

  group :tmux do
    symlink "_tmux/tmux.conf", ".tmux.conf"
  end

  group :vagrant do
    run :bootstrap_vagrant do
      %x( vagrant plugin install vagrant-vbguest )
    end
  end

  group :vim do
    symlink "_vim", ".vim"
    symlink "_vimrc", ".vimrc"
    symlink "_vimrc", ".config/nvim/init.vim" # For NVIM Compat

    run :boostrap_nvim do
      puts "... Clone Vundle"
      %x( git clone https://github.com/gmarik/Vundle.vim.git $HOME/.vim/bundle/Vundle.vim )

      puts "... Install Plugins"
      %x( vim +PluginInstall +qall )

      puts "... Setup helptags for ctrlp"
      %x( vim -c "helptags $HOME/.vim/bundle/ctrlp.vim/doc" -qall )
    end
  end

  group :zsh do
    symlink "_zshrc", ".zshrc"
  end

  group :oh_my_zsh do
    run :install do
      %x( sh -c "$(curl -fsSL https://raw.github.com/robbyrussell/oh-my-zsh/master/tools/install.sh)" )
    end

    symlink "_oh-my-zsh/custom/plugins/mario", ".oh-my-zsh/custom/plugins/mario"
  end
end

env :windows do
  group :bin do
    symlink "win_bin" "bin"
  end

  group :git_bash do
    symlink "win_bashrc" ".bashrc"
  end

  group :win_subl do
    symlink "_config/sublime-text-3" "AppData/Roaming/Sublime Text 3"
  end
end
